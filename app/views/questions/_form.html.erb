<%= turbo_frame_tag "#{question.key}_#{response.id}" do %>
	<% if success %>
		<% @css_class = success ? "form-success" : "form-error" %>
	<% end %>
	<%= form_with model: response, data: { turbo_frame: "#{question.key}_#{response.id}" } do |f| %>
		<% response.read_attribute(question.codes_field).try(:sort).each do |code| %>
			<div class="tag"><%= code %></div>
		<% end %>
		<%= f.text_area question.codes_field, value: response.read_attribute(question.codes_field).try(:sort).try(:join, ', '), multiple: true, class: "#{@css_class}" %>
		<%= f.submit "Save", class: "small" %>
	<% end %>
<% end %>
